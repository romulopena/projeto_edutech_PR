print('seja bem vindo a store!!')
print('')
cliente = input('digite o nome do cliente ')
print('')
produto = input('digite o nome do produto a ser comprado ')
print('')
valor_produto = int(input('digite o valor do produto '))
print('')
desconto = int(input('digite o desconto a ser utilizado (0-100) %'))
valor = valor_produto * (desconto / 100)
finalizar = valor_produto - desconto
print('{}, o desconto no {} será de {}%'.format(cliente, produto, valor))
print('')
print('valor final do produto: {}'.format(finalizar))
print('')
print('agradeçemos pela confiança em nossa loja, volte sempre!!!')
